<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    app:paddingEnd="10dp"
    android:id="@+id/place_search_item"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="14dp"
            android:text="Địa điểm đến: "
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"/>

        <ImageButton
            android:layout_width="@dimen/buttonIconSize"
            android:layout_height="@dimen/buttonIconSize"
            android:background="@drawable/change"
            android:layout_marginLeft ="-80dp"
            android:onClick="clickChangeSearchItem"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/primary_text"
            android:background="@color/background"
            android:textSize="@dimen/textSize"
            android:hint="Nhập địa điểm đến"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="50dp"
            android:onClick="clickDestination"/>

        <ImageButton
            android:id="@+id/btnSubSearchItem"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/sub"
            android:layout_marginLeft="-35dp"
            android:gravity="center_vertical"
            android:onClick="clickSubSearchItem" />

    </LinearLayout>
</LinearLayout>
